{
  "private": true,
  "name": "flash-me",
  "description": "Learn through rehearsal. Create and study with flashcards online.",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "postinstall": "remix setup node",
    "update:db": "npx prisma db push",
    "seed": "node --require esbuild-register prisma/seed.ts",
    "wipe:db": "prisma migrate reset && npm run update:db",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "status": "flyctl status",
    "logs": "flyctl logs",
    "log:secrets": "flyctl config list"
  },
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "@reach/skip-nav": "^0.16.0",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "dotenv": "^14.2.0",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rehype-react": "^6.2.1",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "remix": "^1.1.3",
    "tiny-invariant": "^1.2.0",
    "unified": "^9.2.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/prettier": "^2.4.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "concurrently": "^7.0.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "prisma": "^3.8.1",
    "tailwindcss": "^3.0.15",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
